<%= turbo_frame_tag truc do %>
  <div class="truc flex grow m-4">
    <%= link_to truc.name,
        truc_path(truc),
        class: "text-green-800 no-underline text-xl" 
    %>
    <div class="truc__actions flex grow justify-end mx-4">
      <%= button_to "Delete",
                    truc_path(truc),
                    method: :delete,
                    form: { data: { turbo_frame: "_top" } },
                    class: "g-transparent hover:bg-red-500 text-red-400 font-semibold hover:text-white  px-4 border border-red-500 hover:border-transparent rounded no-underline mx-2" 
      %>
      <%= link_to "Edit",
                  edit_truc_path(truc),
                  class: "g-transparent hover:bg-green-500 text-green-400 font-semibold hover:text-white px-4 border border-green-500 hover:border-transparent rounded no-underline mx-2" 
      %>
    </div>
  </div>
<% end %>